# Vector Search Service Configuration Example
# Copy to .env and customize for your environment

# Database Configuration
# IMPORTANT: Use the same credentials as your pgvector backend deployment
# For OpenShift: Credentials come from postgres-pgvector-secret automatically
# For local dev: Set these to match your local PostgreSQL instance

POSTGRES_HOST=postgres-pgvector
POSTGRES_PORT=5432
POSTGRES_USER=raguser
POSTGRES_PASSWORD=YOUR_POSTGRES_PASSWORD_HERE  # Match pgvector backend
POSTGRES_DB=ragdb

# Service Configuration
PORT=8000
LOG_LEVEL=INFO
DEBUG=false

# Full-Text Search Configuration
FTS_LANGUAGE=english
FTS_RANKING_NORMALIZATION=32

# Performance Tuning
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
MAX_BATCH_DOCUMENTS=50
BATCH_COMMIT_SIZE=10
